@*@model Microsoft.AspNetCore.Identity.SignInManager<Users>*@
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <base href="/">
    @*need if you use angular*@
    <title>Dot Net Core</title>
    <environment names="Devlopment">
        <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
        <link rel="stylesheet" href="/css/App.css" type="text/css">
    </environment>
    <environment names="Staging,Production">
        <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="/css/App.css" type="text/css">
    </environment>
</head>
<body>
    <header class="container">
        <nav class="navbar navbar-dark bg-dark">
            <h1 class="navbar-brand">Dot Net Core</h1>
            <button class="navbar-toggler" data-toggle="collapse" data-target="#navbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="App" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="App" asp-action="About">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="App" asp-action="Contact">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="App" asp-action="shop">Shop</a>
                    </li>

                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Logout">Log Out : @User.Identity.Name</a>
                        </li>
                    }
                </ul>
            </div>






        </nav>
    </header>
    <div class="container containt">
        <h1 class="text-center text-dark font-weight-normal bg-transparent">@ViewBag.PageTitle</h1>
        @RenderBody()
    </div>
    <footer class="container">

        <h5 class="text-center">&copy; 2020 sanjiv.com .</h5>
    </footer>
    <environment names="Devlopment">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="/js/App.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-1.9.0.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.JQuery">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/4.2.1/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.JQuery && window.JQuery.fn && window.JQuery.fn.model">
        </script>
        
        <script src="/js/App.js"></script>
    </environment>

    @RenderSection("Scripts", false);
</body>

</html>
